<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deway.blog.mapper.BackGroundImageMapper">
  <resultMap id="BaseResultMap" type="com.deway.blog.entiry.BackGroundImage">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="file_path" jdbcType="BIGINT" property="filePath" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, file_path, create_time
  </sql>

  <insert id="create" keyColumn="id" keyProperty="id" parameterType="com.deway.blog.entiry.BackGroundImage" useGeneratedKeys="true">
    insert into back_ground_image (file_path)
    values (#{filePath,jdbcType=BIGINT})
  </insert>
  <select id="findById" resultType="java.lang.String">
    select file_path as filePath
    from back_ground_image
    where id = #{id}
  </select>

</mapper>